<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E68181"
    tools:context=".Activities.Home">

    <Button
        android:id="@+id/viewTermsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Terms"
        app:layout_constraintBottom_toTopOf="@+id/viewCoursesButton"
        app:layout_constraintEnd_toEndOf="@+id/viewCoursesButton"
        app:layout_constraintStart_toStartOf="@+id/viewCoursesButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewCoursesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Courses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="176dp"
        android:layout_height="160dp"
        android:layout_marginStart="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/viewAssessmentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Assessments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewCoursesButton"
        app:layout_constraintStart_toStartOf="@+id/viewCoursesButton"
        app:layout_constraintTop_toBottomOf="@+id/viewCoursesButton" />
</androidx.constraintlayout.widget.ConstraintLayout>